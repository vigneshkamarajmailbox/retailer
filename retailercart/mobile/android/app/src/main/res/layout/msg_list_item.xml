<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        app:cardBackgroundColor="@color/color_btn_white"
        app:cardCornerRadius="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="35dp"
            android:paddingRight="5dp"
            android:paddingStart="35dp"
            android:paddingEnd="5dp"
            android:paddingTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/msg_title_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/message"
                    android:textColor="@color/color_light_red"
                    android:textSize="15sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/msg_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="3dp"
                    android:gravity="end|top"
                    android:maxLines="2"
                    android:textColor="@color/color_light_red"
                    android:textSize="@dimen/txt_size_small" />

            </LinearLayout>

            <TextView
                android:id="@+id/msg_body_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/message"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_size_normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/msg_file_name_txt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:ellipsize="middle"
                    android:gravity="center_vertical|end"
                    android:singleLine="true"
                    android:text="@string/file"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="@dimen/txt_size_small" />

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/attachement"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/circle_bg_white"
                    android:textColor="@android:color/white"
                    app:srcCompat="@drawable/ic_download" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/msg_initi_txt"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:background="@drawable/blue_circle_btn"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/txt_size_medium"
        android:textStyle="bold" />

</RelativeLayout>

