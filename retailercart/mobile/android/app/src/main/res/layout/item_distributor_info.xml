<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_logo"
        android:layout_width="80dp"
        android:layout_height="0dp"
        app:cardCornerRadius="6dp"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="true"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <ImageView
            android:id="@+id/iv_company_logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            />
    </androidx.cardview.widget.CardView>


    <ImageView
        android:id="@+id/iv_distr_name"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/cv_logo"
        app:layout_constraintTop_toTopOf="@+id/cv_logo"
        app:srcCompat="@drawable/ic_person" />

    <TextView
        android:id="@+id/tv_distributor_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:gravity="center_vertical"
        android:text=""
        android:includeFontPadding="false"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_distr_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_distr_name"
        app:layout_constraintTop_toTopOf="@+id/iv_distr_name" />


    <ImageView
        android:id="@+id/iv_distr_company"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintEnd_toEndOf="@+id/iv_distr_name"
        app:layout_constraintStart_toStartOf="@+id/iv_distr_name"
        app:layout_constraintTop_toTopOf="@+id/tv_distributor_company_name"
        app:srcCompat="@drawable/ic_company" />

    <TextView
        android:id="@+id/tv_distributor_company_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:text=""
        android:textColor="@color/color7"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_distr_company"
        app:layout_constraintTop_toBottomOf="@+id/tv_distributor_name" />


    <ImageView
        android:id="@+id/iv_distr_address"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintEnd_toEndOf="@+id/iv_distr_company"
        app:layout_constraintStart_toStartOf="@+id/iv_distr_company"
        app:layout_constraintTop_toTopOf="@+id/tv_distributor_address_one"
        app:srcCompat="@drawable/location_icon" />

    <TextView
        android:id="@+id/tv_distributor_address_one"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:text=""
        android:textColor="@color/color7"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_distr_address"
        app:layout_constraintTop_toBottomOf="@+id/tv_distributor_company_name" />

    <TextView
        android:id="@+id/tv_distributor_address_two"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:text=""
        android:includeFontPadding="false"

        android:textColor="@color/color7"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/tv_distributor_address_one"
        app:layout_constraintStart_toStartOf="@+id/tv_distributor_address_one"
        app:layout_constraintTop_toBottomOf="@+id/tv_distributor_address_one" />

    <TextView
        android:id="@+id/tv_distributor_address_three"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:text=""
        android:textColor="@color/color7"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/tv_distributor_address_two"
        app:layout_constraintStart_toStartOf="@+id/tv_distributor_address_two"
        app:layout_constraintTop_toBottomOf="@+id/tv_distributor_address_two" />

</androidx.constraintlayout.widget.ConstraintLayout>