<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DDD"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:paddingBottom="1dp">

        <TextView
            android:id="@+id/ordsum_pro_name"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:background="@color/color_btn_white"
            android:clickable="false"
            android:ellipsize="end"
            android:padding="5dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="@color/cardview_dark_background"
            android:textSize="@dimen/txt_size_small" />

        <TextView
            android:id="@+id/ordsum_qty_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@color/color_btn_white"
            android:gravity="center"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="@color/cardview_dark_background"
            android:textSize="@dimen/txt_size_small" />


        <TextView
            android:id="@+id/ordsum_gross_amt_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@color/color_btn_white"
            android:clickable="false"
            android:gravity="center"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="@color/cardview_dark_background"
            android:textSize="@dimen/txt_size_small" />


        <TextView
            android:id="@+id/ordsum_discount_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@color/color_btn_white"
            android:gravity="center"
            android:padding="5dp"
            android:singleLine="true"
            android:visibility="visible"
            android:textColor="@color/cardview_dark_background"
            android:textSize="@dimen/txt_size_small" />


        <TextView
            android:id="@+id/ordsum_tax_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@color/color_btn_white"
            android:gravity="center"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="@color/cardview_dark_background"
            android:textSize="@dimen/txt_size_small" />

        <TextView
            android:id="@+id/ordsum_net_amt_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@color/color_btn_white"
            android:clickable="false"
            android:gravity="center"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="@color/cardview_dark_background"
            android:textSize="@dimen/txt_size_small" />

    </LinearLayout>
</RelativeLayout>