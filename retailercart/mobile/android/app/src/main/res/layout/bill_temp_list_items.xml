<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/temp_bill_item_list_root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">


        <TextView
            android:id="@+id/bill_product_name_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:paddingEnd="1dp"
            android:paddingRight="1dp"
            android:text="@string/product_name"
            android:textColor="@color/color_prod_txt"
            android:textSize="@dimen/txt_size_semi_medium"
            android:typeface="serif" />

        <TextView
            android:id="@+id/tot_free_qty"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:gravity="end"
            android:maxLines="1"
            android:text="@string/_0"
            android:textColor="@color/color_prod_txt"
            android:textSize="@dimen/txt_size_semi_medium"
            android:typeface="serif" />

        <TextView
            android:id="@+id/tot_bill_qty"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:gravity="end"
            android:maxLines="1"
            android:text="@string/_0"
            android:textColor="@color/color_prod_txt"
            android:textSize="@dimen/txt_size_semi_medium"
            android:typeface="serif" />

        <TextView
            android:id="@+id/bill_ltotal_txt"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:maxLines="1"
            android:padding="5dp"
            android:text="@string/_0_00"
            android:textColor="@color/color_prod_txt"
            android:textSize="@dimen/txt_size_semi_medium"
            android:typeface="serif" />

        <ImageView
            android:id="@+id/ivDelete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="5dp"
            app:srcCompat="@drawable/edit"
            android:tint="@color/color3"
            android:contentDescription="@string/null_val" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/color_btn_white" />

</LinearLayout>