<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/dialog_bg"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/alert_msg_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:drawableLeft="@drawable/alert"
            android:drawableStart="@drawable/alert"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/alert"
            android:textColor="@color/navig_list_normal_clr"
            android:textSize="@dimen/txt_size_semi_medium" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/color_list_divider" />

        <TextView
            android:id="@+id/alert_msg_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/txt_size_large"
            android:gravity="center"
            android:textColor="#666666"
            android:textSize="@dimen/txt_size_semi_medium" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/alert_msg_ok_btn"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/custom_btn"
                android:text="@string/ok"
                android:textColor="@color/colorWhite" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>