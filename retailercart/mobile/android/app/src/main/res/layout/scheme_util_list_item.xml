<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        app:cardCornerRadius="2dp"
        app:cardBackgroundColor="@color/light_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/scheme_name_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:text="@string/scheme_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_size_semi_medium" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/scheme_code_txt"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:maxLines="2"
                        android:text="@string/scheme"
                        android:textColor="@color/color_prod_txt"
                        android:textSize="@dimen/txt_size_small" />

                    <TextView
                        android:id="@+id/scheme_type_txt"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:maxLines="2"
                        android:text="@string/scheme"
                        android:textColor="@color/navig_list_normal_clr"
                        android:textSize="@dimen/txt_size_small"
                        android:gravity="right" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/from_date_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:text="@string/scheme"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/txt_size_normal" />

                    <TextView
                        android:id="@+id/to_date_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:text="@string/scheme"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/txt_size_normal"/>
                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/scheme_util_img"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/navigation_circle_bg"
                android:contentDescription="@string/null_val"
                android:padding="6dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/scheme_to_orderbooking_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_btn_red"
                android:text="@string/order"
                android:textColor="@color/white"
                android:visibility="gone" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>