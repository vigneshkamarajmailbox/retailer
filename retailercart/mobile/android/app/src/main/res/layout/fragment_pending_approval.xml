<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.botree.retailerssfa.main.PendingApprovalFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pend_retr_approval_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/pending_retr_approval_empty_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:drawablePadding="10dp"
        android:visibility="gone"
        android:drawableTop="@drawable/sad"
        android:text="@string/no_recods_found" />

</RelativeLayout>
