<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.botree.retailerssfa.main.RetailerApprovalDetailActivity">

    <include layout="@layout/custom_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                app:cardCornerRadius="4dp">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="6dp"
                    android:stretchColumns="3">

                    <TableRow>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/retailer_code"
                            android:textColor="@color/color_prod_txt"
                            android:textSize="@dimen/txt_size_normal"
                            android:textStyle="bold"
                            android:typeface="serif" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="@string/quote"
                            android:textColor="@color/color6"
                            android:textSize="@dimen/txt_size_normal"
                            android:textStyle="bold"
                            android:typeface="serif" />

                        <TextView
                            android:id="@+id/approval_retailer_code_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color6"
                            android:textSize="@dimen/txt_size_medium"
                            android:textStyle="bold"
                            android:typeface="serif" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/retailer_name"
                            android:textColor="@color/color_prod_txt"
                            android:textSize="@dimen/txt_size_normal"
                            android:textStyle="bold"
                            android:typeface="serif" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="@string/quote"
                            android:textColor="@color/color6"
                            android:textSize="@dimen/txt_size_normal"
                            android:textStyle="bold"
                            android:typeface="serif" />

                        <TextView
                            android:id="@+id/approval_retr_name_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color6"
                            android:textSize="@dimen/txt_size_medium"
                            android:textStyle="bold"
                            android:typeface="serif" />
                    </TableRow>


                    <TableRow>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/address"
                            android:textColor="@color/color_prod_txt"
                            android:textSize="@dimen/txt_size_normal"
                            android:textStyle="bold"
                            android:typeface="serif" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="@string/quote"
                            android:textColor="@color/color6"
                            android:textSize="@dimen/txt_size_normal"
                            android:textStyle="bold"
                            android:typeface="serif" />

                        <TextView
                            android:id="@+id/approval_address_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color6"
                            android:textSize="@dimen/txt_size_medium"
                            android:textStyle="bold"
                            android:typeface="serif" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/pin_code"
                            android:textColor="@color/color_prod_txt"
                            android:textSize="@dimen/txt_size_normal"
                            android:textStyle="bold"
                            android:typeface="serif" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="@string/quote"
                            android:textColor="@color/color6"
                            android:textSize="@dimen/txt_size_normal"
                            android:textStyle="bold"
                            android:typeface="serif" />

                        <TextView
                            android:id="@+id/approval_pin_code_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color6"
                            android:textSize="@dimen/txt_size_medium"
                            android:textStyle="bold"
                            android:typeface="serif" />
                    </TableRow>

                </TableLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                app:cardCornerRadius="5dp"
                app:contentPadding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_channel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="@string/channel"
                        android:textColor="@color/color_list_item_txt"
                        android:textSize="@dimen/txt_size_normal" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/edit_bg"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/spinner_channel_newretailer"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:inputType="text" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="@string/sub_channel"
                        android:textColor="@color/color_list_item_txt"
                        android:textSize="@dimen/txt_size_normal" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/edit_bg"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/spinner_sub_channel_newretailer"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:maxLines="1" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txt_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/group"
                        android:textColor="@color/color_list_item_txt"
                        android:textSize="@dimen/txt_size_normal" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/edit_bg"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/spinner_group_newretailer"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:clickable="false" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txt_class"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/retailer_class"
                        android:textColor="@color/color_list_item_txt"
                        android:textSize="@dimen/txt_size_normal" />


                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/edit_bg"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/spinner_class_newretailer"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:maxLines="1" />
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                app:cardCornerRadius="5dp"
                app:contentPadding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/apo_code_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/edit_bg"
                        android:hint="@string/apo_code"
                        android:imeOptions="actionNext"
                        android:inputType="textCapSentences"
                        android:maxLength="50"
                        android:maxLines="1"
                        android:padding="8dp"
                        android:textSize="@dimen/txt_size_normal" />


                    <EditText
                        android:id="@+id/own_wd_code_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_bg"
                        android:hint="@string/own_wd_code"
                        android:imeOptions="actionDone"
                        android:inputType="textCapSentences"
                        android:maxLength="50"
                        android:maxLines="1"
                        android:padding="8dp"
                        android:textSize="@dimen/txt_size_normal" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/retr_approval_radio_group"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingEnd="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingStart="10dp">

            <RadioButton
                android:id="@+id/retr_accept_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@drawable/checkbox_selector"
                android:padding="10dp"
                android:text="@string/accept"

                android:textColor="@color/white" />

            <RadioButton
                android:id="@+id/retr_reject_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@drawable/checkbox_selector"
                android:padding="10dp"
                android:text="@string/reject"
                android:textColor="@color/white" />

        </RadioGroup>

        <Button
            android:id="@+id/retr_approval_submit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_btn_red"
            android:text="@string/submit"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>
