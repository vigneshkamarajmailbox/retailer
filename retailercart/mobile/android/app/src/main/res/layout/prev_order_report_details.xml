<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1590dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="1dp">

    <RelativeLayout
        android:id="@+id/selection_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:padding="15dp">

        <Button
            android:id="@+id/tracking_btn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:background="@drawable/custom_view_order_btn"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="Track ORD"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_small"
            android:textStyle="bold" />

        <Button
            android:id="@+id/details_btn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/tracking_btn"
            android:background="@drawable/custom_view_order_btn"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Details"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_small"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/details_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/selection_rl"
        android:background="#DDD"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="1dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/prod_code_txt"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:background="@color/color_btn_white"
            android:clickable="false"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="5dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="@color/cardview_dark_background"
            android:textSize="@dimen/txt_size_small" />

        <TextView
            android:id="@+id/prod_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:background="@color/color_btn_white"
            android:clickable="false"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="5dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="@color/cardview_dark_background"
            android:textSize="@dimen/txt_size_small" />

        <TextView
            android:id="@+id/qty"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:background="@color/color_btn_white"
            android:gravity="center"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="@color/cardview_dark_background"
            android:textSize="@dimen/txt_size_small" />

        <TextView
            android:id="@+id/sell_rate"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:background="@color/color_btn_white"
            android:clickable="false"
            android:gravity="center"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="@color/cardview_dark_background"
            android:textSize="@dimen/txt_size_small" />


        <TextView
            android:id="@+id/lgross_txt"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:background="@color/color_btn_white"
            android:gravity="center"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="@color/cardview_dark_background"
            android:textSize="@dimen/txt_size_small"
            android:visibility="visible" />


        <TextView
            android:id="@+id/discount"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:background="@color/color_btn_white"
            android:gravity="center"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="@color/cardview_dark_background"
            android:textSize="@dimen/txt_size_small" />

        <TextView
            android:id="@+id/other_discount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@color/color_btn_white"
            android:gravity="center"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="@color/cardview_dark_background"
            android:textSize="@dimen/txt_size_small"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tax"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:background="@color/color_btn_white"
            android:gravity="center"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="@color/cardview_dark_background"
            android:textSize="@dimen/txt_size_small" />

        <TextView
            android:id="@+id/net_amt"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:background="@color/color_btn_white"
            android:clickable="false"
            android:gravity="center"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="@color/cardview_dark_background"
            android:textSize="@dimen/txt_size_small" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/tracking_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/selection_rl"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:paddingBottom="1dp">


        <LinearLayout
            android:id="@+id/order_Status_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_date_order_Status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="1dp"
                android:layout_marginRight="1dp"
                android:clickable="false"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="5dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/cardview_dark_background"
                android:textSize="@dimen/txt_size_semi_medium" />

            <TextView
                android:id="@+id/tv_time_order_Status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="1dp"
                android:layout_marginRight="1dp"
                android:clickable="false"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="5dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/cardview_dark_background"
                android:textSize="@dimen/txt_size_small" />

            <View
                android:id="@+id/divider_view"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color7"
                android:layout_margin="5dp"/>

            <TextView
                android:id="@+id/tv_order_Status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="1dp"
                android:layout_marginRight="1dp"
                android:clickable="false"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="5dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/cardview_dark_background"
                android:textSize="@dimen/txt_size_small" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_order_status_no_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_recods_found"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:visibility="gone"
            android:textSize="@dimen/txt_size_large"
            android:padding="10dp"/>
    </RelativeLayout>
</RelativeLayout>