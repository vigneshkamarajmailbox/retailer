<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="0dip" />
            <stroke android:width="1dip" android:color="@color/navig_list_pressed_clr" />
            <gradient  android:angle="-90"  android:startColor="@color/navig_list_normal_clr" android:endColor="@color/navig_list_normal_clr"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="0dip" />
            <stroke android:width="1dip" android:color="@color/navig_list_pressed_clr" />
            <solid  android:color="@color/navig_list_normal_clr"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="0dip" />
            <stroke android:width="1dip" android:color="@color/navig_list_pressed_clr" />
            <gradient  android:angle="-90"  android:startColor="@color/navig_list_pressed_clr" android:endColor="@color/navig_list_pressed_clr" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle"  >
            <corners android:radius="0dip" />
            <stroke android:width="1dip" android:color="@color/navig_list_pressed_clr" />
            <solid  android:color="@color/sidebar_color_item_sel"/>
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="0dip" />
            <stroke android:width="1dip" android:color="@color/navig_list_pressed_clr" />
            <solid  android:color="@color/navig_list_normal_clr"/>
        </shape>
    </item>
</selector>
