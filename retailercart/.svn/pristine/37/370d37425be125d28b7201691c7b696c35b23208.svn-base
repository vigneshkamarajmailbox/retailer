<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/order_summary_header_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="4dp"
            android:paddingLeft="4dp"
            android:paddingTop="6dp"
            android:paddingEnd="1dp"
            android:paddingRight="1dp"
            android:paddingBottom="6dp">

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">

                <TextView
                    android:id="@+id/header_date_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="@string/retailers"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/txt_size_semi_medium"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/order_no_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="@string/order_no"
                    android:textColor="@color/color5"
                    android:textSize="@dimen/txt_size_small"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/order_items_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/_0"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="@dimen/txt_size_semi_medium"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/order_item_label_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/items"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="@dimen/txt_size_small"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/day_sum_gross_amt_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/_0"
                    android:textColor="@color/red"
                    android:textSize="@dimen/txt_size_semi_medium"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/gross_amt_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/gross_amt"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="@dimen/txt_size_small"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ord_sum_header_discount_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/_0"
                    android:textColor="@color/red"
                    android:textSize="@dimen/txt_size_semi_medium"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/discount_amt_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/dicount_amt"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="@dimen/txt_size_small"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ord_sum_header_tax_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/_0"
                    android:textColor="@color/red"
                    android:textSize="@dimen/txt_size_semi_medium"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/tax_amt"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="@dimen/txt_size_small"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/order_net_amt_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/_0"
                    android:textColor="@color/red"
                    android:textSize="@dimen/txt_size_semi_medium"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/net_amt"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="@dimen/txt_size_small"
                    android:textStyle="bold" />

            </LinearLayout>

            <ImageView
                android:id="@+id/share_data_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="@drawable/circle_bg"
                android:contentDescription="@null"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:tint="@color/white"
                app:srcCompat="@drawable/share" />

            <ImageView
                android:id="@+id/ordersum_indicatorimage"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:contentDescription="@null"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:tint="@color/colorPrimary"
                android:visibility="gone"
                app:srcCompat="@drawable/right" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>