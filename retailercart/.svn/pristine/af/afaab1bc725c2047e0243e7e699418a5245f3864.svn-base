<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:id="@+id/parent_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingTop="10dp"
        android:paddingRight="5dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/retailer_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="2dp"
            android:text="@string/retailer_name"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/txt_size_semi_medium"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/date"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:text="@string/modDt"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/txt_size_normal"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/invoice_no"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="2dp"
                android:text="@string/_00"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/txt_size_normal"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/count"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:maxLines="1"
                android:padding="2dp"
                android:text="@string/_00"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_size_semi_medium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/inv_gross_amt_txt"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="end|center_vertical"
                android:maxLines="1"
                android:padding="2dp"
                android:text="@string/_00"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_size_semi_medium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/inv_disc_amt_txt"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="end|center_vertical"
                android:maxLines="1"
                android:padding="2dp"
                android:text="@string/_00"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_size_semi_medium"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/inv_tax_amt_txt"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="end|center_vertical"
                android:maxLines="1"
                android:padding="2dp"
                android:text="@string/_00"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_size_semi_medium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/order_value"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="end|center_vertical"
                android:maxLines="1"
                android:padding="2dp"
                android:text="@string/_00"
                android:textColor="@color/color_red"
                android:textSize="@dimen/txt_size_semi_medium"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>