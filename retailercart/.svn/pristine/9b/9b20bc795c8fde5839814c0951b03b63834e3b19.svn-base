<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/root_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".main.DistributorMasterFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/address_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp">

                    <EditText
                        android:id="@+id/address_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:enabled="false"
                        android:hint="@string/address_1"
                        android:imeOptions="actionNext"
                        android:paddingTop="2dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/txt_size_medium" />
                </com.google.android.material.textfield.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="2dp"
                    android:background="@color/color1" />

                <LinearLayout
                    android:id="@+id/address_2_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp">

                        <EditText
                            android:id="@+id/address_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:enabled="false"
                            android:hint="@string/address_2"
                            android:imeOptions="actionNext"
                            android:paddingTop="2dp"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/txt_size_medium" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="2dp"
                        android:background="@color/color1" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/address_3_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp">

                        <EditText
                            android:id="@+id/address_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:enabled="false"
                            android:hint="@string/address_3"
                            android:imeOptions="actionNext"
                            android:paddingTop="2dp"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/txt_size_medium" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="2dp"
                        android:background="@color/color1" />
                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp">

                    <EditText
                        android:id="@+id/pincode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:enabled="false"
                        android:hint="@string/pincode"
                        android:imeOptions="actionNext"
                        android:maxLines="1"
                        android:paddingTop="2dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/txt_size_medium" />
                </com.google.android.material.textfield.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/color1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2.5dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp">

                            <EditText
                                android:id="@+id/mobile_number"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:digits="1234567890"
                                android:hint="@string/mobile_number"
                                android:imeOptions="actionDone"
                                android:inputType="phone"
                                android:maxLength="10"
                                android:maxLines="1"
                                android:enabled="false"
                                android:paddingTop="2dp"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/txt_size_medium" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginRight="2.5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@color/color1" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2.5dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:layout_weight="1">

                                <EditText
                                    android:id="@+id/phone_number"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:enabled="false"
                                    android:hint="@string/phone_number"
                                    android:imeOptions="actionNext"
                                    android:maxLines="1"
                                    android:paddingTop="2dp"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="@dimen/txt_size_medium" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <ImageView
                                android:id="@+id/call"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="right|center"
                                android:gravity="center"
                                android:src="@drawable/phone" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="2.5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@color/color1" />
                    </LinearLayout>
                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp">

                    <EditText
                        android:id="@+id/contact_person"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:enabled="false"
                        android:hint="@string/contact_person"
                        android:imeOptions="actionNext"
                        android:maxLines="1"
                        android:paddingTop="2dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/txt_size_medium" />
                </com.google.android.material.textfield.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/color1" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp">

                    <EditText
                        android:id="@+id/mail_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:enabled="false"
                        android:hint="@string/e_mail_id"
                        android:imeOptions="actionNext"
                        android:maxLines="1"
                        android:paddingTop="2dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/txt_size_medium" />
                </com.google.android.material.textfield.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/color1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2.5dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp">

                            <EditText
                                android:id="@+id/branch_code"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:enabled="false"
                                android:hint="@string/branch_code"
                                android:imeOptions="actionNext"
                                android:maxLines="1"
                                android:paddingTop="2dp"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/txt_size_medium" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginRight="2.5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@color/color1" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2.5dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp">

                            <EditText
                                android:id="@+id/branch_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:enabled="false"
                                android:hint="@string/branch_name"
                                android:imeOptions="actionNext"
                                android:maxLines="1"
                                android:paddingTop="2dp"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/txt_size_medium" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="2.5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@color/color1" />
                    </LinearLayout>
                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp">

                    <EditText
                        android:id="@+id/gst_statecode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:enabled="false"
                        android:hint="@string/gst_statecode"
                        android:imeOptions="actionNext"
                        android:maxLines="1"
                        android:paddingTop="2dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/txt_size_medium" />
                </com.google.android.material.textfield.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/color1" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/geo_hier_path"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:enabled="false"
                        android:hint="@string/geo_hier_path"
                        android:imeOptions="actionNext"
                        android:paddingTop="2dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/txt_size_medium" />
                </com.google.android.material.textfield.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/color1"
                    android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/other_details_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2.5dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:layout_weight="1">

                            <EditText
                                android:id="@+id/fssai_number"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:hint="@string/fssai_number"
                                android:imeOptions="actionNext"
                                android:inputType="number"
                                android:maxLength="14"
                                android:maxLines="1"
                                android:paddingTop="2dp"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/txt_size_medium" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="2.5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@color/color1" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2.5dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:layout_weight="1">

                                <EditText
                                    android:id="@+id/fssai_expiry_date"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:clickable="true"
                                    android:focusableInTouchMode="false"
                                    android:hint="@string/expiry_date"
                                    android:imeOptions="actionNext"
                                    android:inputType="date"
                                    android:maxLines="1"
                                    android:paddingTop="2dp"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="@dimen/txt_size_medium" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <ImageView
                                android:id="@+id/ivDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:contentDescription="@string/null_val"
                                android:paddingTop="5dp"
                                app:srcCompat="@drawable/ic_date_range" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="2.5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@color/color1" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/gst_pan_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2.5dp"
                        android:layout_weight="1.5"
                        android:orientation="vertical">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp">

                            <EditText
                                android:id="@+id/gst_number"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:enabled="false"
                                android:hint="@string/gst_number"
                                android:imeOptions="actionNext"
                                android:maxLines="1"
                                android:paddingTop="2dp"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/txt_size_medium" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginRight="2.5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@color/color1" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2.5dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp">

                            <EditText
                                android:id="@+id/pan_number"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:enabled="false"
                                android:hint="@string/pan_number"
                                android:imeOptions="actionNext"
                                android:maxLines="1"
                                android:paddingTop="2dp"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/txt_size_medium" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="2.5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@color/color1" />
                    </LinearLayout>
                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp">

                    <EditText
                        android:id="@+id/aadhar_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:enabled="false"
                        android:hint="@string/aadhar_number"
                        android:imeOptions="actionNext"
                        android:maxLines="1"
                        android:paddingTop="2dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/txt_size_medium" />
                </com.google.android.material.textfield.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/color1" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp">

                    <EditText
                        android:id="@+id/type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:enabled="false"
                        android:hint="@string/type"
                        android:imeOptions="actionNext"
                        android:maxLines="1"
                        android:paddingTop="2dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/txt_size_medium" />
                </com.google.android.material.textfield.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/color1" />

                <LinearLayout
                    android:id="@+id/drug_licence_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2.5dp"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp">

                            <EditText
                                android:id="@+id/drug_license_number"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:enabled="false"
                                android:hint="@string/drug_license_number"
                                android:imeOptions="actionNext"
                                android:maxLines="1"
                                android:paddingTop="2dp"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/txt_size_medium" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginRight="2.5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@color/color1" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2.5dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp">

                            <EditText
                                android:id="@+id/expiry_date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:clickable="true"
                                android:enabled="false"
                                android:focusableInTouchMode="false"
                                android:hint="@string/expiry_date"
                                android:imeOptions="actionNext"
                                android:inputType="date"
                                android:maxLines="1"
                                android:paddingTop="2dp"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/txt_size_medium" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="2.5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@color/color1" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/day_off"
                    android:textColor="@color/color_list_item_txt"
                    android:textSize="@dimen/txt_size_medium" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/sunday_day_off"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sunday" />

                    <RadioButton
                        android:id="@+id/monday_day_off"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Monday" />

                    <RadioButton
                        android:id="@+id/tuesday_day_off"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tuesday" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/wednesday_day_off"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Wednesday" />

                    <RadioButton
                        android:id="@+id/thursday_day_off"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Thursday" />

                    <RadioButton
                        android:id="@+id/friday_day_off"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Friday" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/saturday_day_off"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Saturday" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lob_details_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/lob_list_header"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimaryDark"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="Sl No."
                        android:textColor="@color/white"
                        android:textSize="@dimen/txt_size_medium" />

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="LOB Code"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txt_size_medium" />

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="LOB Name"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txt_size_medium" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/lob_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/lob_list_empty"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:drawableTop="@drawable/sad"
                    android:drawablePadding="10dp"
                    android:text="@string/no_record"
                    android:textSize="@dimen/txt_size_medium" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/show_down_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="@dimen/fab_margin"
        android:background="@drawable/red_circle_bg"
        android:padding="5dp"
        app:backgroundTint="@color/colorAccentlight"
        app:srcCompat="@drawable/arrow_downward_24dp"
        app:useCompatPadding="true" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>