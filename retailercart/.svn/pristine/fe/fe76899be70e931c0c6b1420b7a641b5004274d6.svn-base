<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <include layout="@layout/custom_toolbar" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/scheme_detail_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:elevation="5dp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/white">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:stretchColumns="2">

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/scheme_code"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/txt_size_normal"
                        android:textStyle="bold"
                        android:typeface="serif" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="@string/quote"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/txt_size_normal"
                        android:textStyle="bold"
                        android:typeface="serif" />

                    <TextView
                        android:id="@+id/scheme_code_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:textColor="@color/color_light_red"
                        android:textSize="@dimen/txt_size_semi_medium"
                        android:typeface="serif" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/scheme_name"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/txt_size_normal"
                        android:textStyle="bold"
                        android:typeface="serif" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="@string/quote"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/txt_size_normal"
                        android:textStyle="bold"
                        android:typeface="serif" />

                    <TextView
                        android:id="@+id/scheme_name_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:textColor="@color/color_light_red"
                        android:textSize="@dimen/txt_size_semi_medium"
                        android:typeface="serif" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/scheme_util"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/txt_size_normal"
                        android:textStyle="bold"
                        android:typeface="serif" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="@string/quote"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/txt_size_normal"
                        android:textStyle="bold"
                        android:typeface="serif" />

                    <TextView
                        android:id="@+id/scheme_util_total_value_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/color_light_red"
                        android:textSize="@dimen/txt_size_semi_medium"
                        android:typeface="serif" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/no_of_invoice"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/txt_size_normal"
                        android:textStyle="bold"
                        android:typeface="serif" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="@string/quote"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/txt_size_normal"
                        android:textStyle="bold"
                        android:typeface="serif" />

                    <TextView
                        android:id="@+id/scheme_util_nofoInvoice_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/color_light_red"
                        android:textSize="@dimen/txt_size_semi_medium"
                        android:typeface="serif" />
                </TableRow>


                <TableRow android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/payout"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/txt_size_normal"
                        android:textStyle="bold"
                        android:typeface="serif" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="@string/quote"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/txt_size_normal"
                        android:textStyle="bold"
                        android:typeface="serif" />

                    <TextView
                        android:id="@+id/scheme_payout_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/color_light_red"
                        android:textSize="@dimen/txt_size_semi_medium"
                        android:typeface="serif" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/scheme_type"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/txt_size_normal"
                        android:textStyle="bold"
                        android:typeface="serif" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="@string/quote"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/txt_size_normal"
                        android:textStyle="bold"
                        android:typeface="serif" />

                    <TextView
                        android:id="@+id/scheme_type_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/color_light_red"
                        android:textSize="@dimen/txt_size_semi_medium"
                        android:typeface="serif" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/start_date"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/txt_size_normal"
                        android:textStyle="bold"
                        android:typeface="serif" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="@string/quote"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/txt_size_normal"
                        android:textStyle="bold"
                        android:typeface="serif" />

                    <TextView
                        android:id="@+id/scheme_start_date_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/color_light_red"
                        android:textSize="@dimen/txt_size_semi_medium"
                        android:textStyle=""
                        android:typeface="serif" />
                </TableRow>


                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/scheme_end_date"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/txt_size_normal"
                        android:textStyle="bold"
                        android:typeface="serif" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="@string/quote"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/txt_size_normal"
                        android:textStyle="bold"
                        android:typeface="serif" />

                    <TextView
                        android:id="@+id/scheme_end_date_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/color_light_red"
                        android:textSize="@dimen/txt_size_semi_medium"
                        android:textStyle=""
                        android:typeface="serif" />
                </TableRow>
            </TableLayout>


        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            android:padding="8dp"
            android:visibility="gone">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingLeft="5dp"
                android:paddingStart="5dp"
                android:paddingRight="5dp"
                android:paddingEnd="5dp"
                android:text="@string/scheme_description"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_semi_medium"
                android:typeface="serif" />


            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/utilized"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_semi_medium"
                android:typeface="serif"
                android:visibility="gone"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/showSKUlayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:animateLayoutChanges="true"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/scheme_util_empty_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/sad"
                android:gravity="center"
                android:maxLines="1"
                android:padding="10dp"
                android:text="@string/no_record_found"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/txt_size_medium"
                android:typeface="serif"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/scheme_util_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/scheme_util_list_item">

            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>

