<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/billing_summary_product_name_txt"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/product_name"
            android:typeface="serif"
            android:ellipsize="end"
            android:textSize="@dimen/txt_size_medium"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:paddingRight="0dp"
            android:paddingEnd="0dp"
            android:maxLines="1"
            android:textColor="@color/color_prod_txt"/>

        <TextView
            android:id="@+id/billing_summary_qty_txt"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="@string/_0"
            android:textSize="@dimen/txt_size_medium"
            android:gravity="center"
            android:typeface="serif"
            android:maxLines="1"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/color_prod_txt"/>

        <TextView
            android:id="@+id/billing_summary_free_qty_txt"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="@string/_0"
            android:textSize="@dimen/txt_size_medium"
            android:gravity="center"
            android:typeface="serif"
            android:maxLines="1"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/color_prod_txt"/>

        <TextView
            android:id="@+id/billing_summary_rate_txt"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/_0_00"
            android:gravity="end"
            android:textSize="@dimen/txt_size_medium"
            android:typeface="serif"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:maxLines="1"
            android:textColor="@color/color_prod_txt"/>

        <TextView
            android:id="@+id/billing_tax_txt"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/_0_00"
            android:gravity="end"
            android:textSize="@dimen/txt_size_medium"
            android:typeface="serif"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:maxLines="1"
            android:textColor="@color/color_prod_txt"/>

        <TextView
            android:id="@+id/billing_summary_gross_txt"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/_0_00"
            android:gravity="end"
            android:textSize="@dimen/txt_size_medium"
            android:typeface="serif"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:maxLines="1"
            android:textColor="@color/color_prod_txt"/>

        <TextView
            android:id="@+id/billing_summary_discount_txt"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/_0_00"
            android:gravity="end"
            android:textSize="@dimen/txt_size_medium"
            android:typeface="serif"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:maxLines="1"
            android:textColor="@color/color_prod_txt"/>

        <TextView
            android:id="@+id/billing_summary_ltotal_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/_00"
            android:textSize="@dimen/txt_size_medium"
            android:typeface="serif"
            android:maxLines="1"
            android:gravity="end"
            android:paddingRight="4dp"
            android:paddingEnd="4dp"
            android:paddingStart="0dp"
            android:paddingLeft="0dp"
            android:textColor="@color/color_prod_txt"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@color/color_btn_white"/>

</LinearLayout>