<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="@color/transparent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/stock_skus_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:layout_marginEnd="1dp"
            android:background="@color/colorWhite"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxEms="8"
            android:maxLines="1"
            android:minEms="8"
            android:padding="4dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/txt_size_semi_medium" />

        <TextView
            android:id="@+id/opening_stock_qty_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:layout_marginEnd="1dp"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:maxEms="4"
            android:minEms="4"
            android:padding="4dp"
            android:textColor="@color/color_prod_txt"
            android:textSize="@dimen/txt_size_semi_medium" />

        <TextView
            android:id="@+id/opening_stock_value_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:layout_marginEnd="1dp"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:maxEms="4"
            android:minEms="4"
            android:padding="4dp"
            android:textColor="@color/color_prod_txt"
            android:textSize="@dimen/txt_size_semi_medium" />


        <TextView
            android:id="@+id/stock_order_qty_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:layout_marginEnd="1dp"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:maxEms="4"
            android:minEms="4"
            android:padding="4dp"
            android:textColor="@color/color_prod_txt"
            android:textSize="@dimen/txt_size_semi_medium" />

        <TextView
            android:id="@+id/stock_order_value_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:layout_marginEnd="1dp"
            android:background="@color/colorWhite"
            android:gravity="end"
            android:maxEms="4"
            android:minEms="4"
            android:padding="4dp"
            android:textColor="@color/color_light_red"
            android:textSize="@dimen/txt_size_semi_medium" />

        <TextView
            android:id="@+id/closing_stock_Qty_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:layout_marginRight="1dp"
            android:layout_marginEnd="1dp"
            android:gravity="center"
            android:maxEms="4"
            android:minEms="4"
            android:padding="4dp"
            android:textColor="@color/color_prod_txt"
            android:textSize="@dimen/txt_size_semi_medium" />

        <TextView
            android:id="@+id/closing_stock_value_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:maxEms="4"
            android:minEms="4"
            android:padding="4dp"
            android:textColor="@color/color_prod_txt"
            android:textSize="@dimen/txt_size_semi_medium" />

    </LinearLayout>
</LinearLayout>
