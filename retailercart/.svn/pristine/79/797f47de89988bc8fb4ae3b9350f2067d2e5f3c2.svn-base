<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">

            <stroke android:width="1dip"
                android:color="@color/navig_list_pressed_clr" />

            <solid android:color="@color/navig_list_pressed_clr" />

            <corners android:radius="0dip" />

            <gradient android:angle="270"
                android:endColor="@color/navig_list_pressed_clr"
                android:centerColor="@color/navig_list_normal_clr"
                android:startColor="@color/navig_list_pressed_clr" />
        </shape>
    </item>
</selector>