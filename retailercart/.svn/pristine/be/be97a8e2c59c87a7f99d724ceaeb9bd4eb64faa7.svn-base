<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/ivDelete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@string/null_val"
            android:padding="3dp"
            app:srcCompat="@drawable/ic_delete" />

        <TextView
            android:id="@+id/order_product_name_txt"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:paddingEnd="1dp"
            android:paddingRight="1dp"
            android:text="@string/product_name"
            android:textColor="@color/color_prod_txt"
            android:textSize="@dimen/txt_size_semi_medium"
            android:typeface="serif" />

        <TextView
            android:id="@+id/sales_qty_txt"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/_0"
            android:textColor="@color/color_prod_txt"
            android:textSize="@dimen/txt_size_semi_medium"
            android:typeface="serif" />
        <TextView
            android:id="@+id/sales_qty_uom"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/_0"
            android:textColor="@color/color_prod_txt"
            android:textSize="@dimen/txt_size_semi_medium"
            android:typeface="serif" />

        <TextView
            android:id="@+id/unsales_qty_txt"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/_0_00"
            android:textColor="@color/color_prod_txt"
            android:textSize="@dimen/txt_size_semi_medium"
            android:typeface="serif" />

        <TextView
            android:id="@+id/unsales_qty_uom"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="1"
            android:padding="3dp"
            android:text="@string/_0_00"
            android:textColor="@color/color_prod_txt"
            android:textSize="@dimen/txt_size_semi_medium"
            android:typeface="serif" />
        <TextView
            android:id="@+id/tvSellPrice"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:maxLines="1"
            android:padding="3dp"
            android:text="@string/_0_00"
            android:textColor="@color/color_prod_txt"
            android:textSize="@dimen/txt_size_semi_medium"
            android:typeface="serif" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/color_btn_white" />

</LinearLayout>